<div id="js-bulk-actions-wrapper">
  <button
    id="js-bulk-actions-button"
    class="button button__sm button__secondary"
    type="button"
    data-toggle="js-bulk-actions-dropdown">
    <%= t("decidim.ideas.admin.ideas.index.actions") %>
    <%= icon "arrow-down-s-line", class: "dropdown-filter-icon" %>
  </button>

  <div
    id="js-bulk-actions-dropdown"
    class="dropdown-pane"
    data-position="bottom"
    data-alignment="right"
    data-dropdown="dropdown"
    data-auto-focus="false"
    data-events="resize">
    <ul>
      <li>
        <button type="button" data-action="recategorize-ideas">
          <%= t("decidim.ideas.admin.ideas.index.change_category") %>
        </button>
      </li>
      <li>
        <button type="button" data-action="scope-change-ideas">
          <%= t("decidim.ideas.admin.ideas.index.change_scope") %>
        </button>
      </li>
      <li>
        <button type="button" data-action="publish-answers">
          <%= t("decidim.ideas.admin.ideas.index.publish_answers") %>
        </button>
      </li>
    </ul>
  </div>
</div>
