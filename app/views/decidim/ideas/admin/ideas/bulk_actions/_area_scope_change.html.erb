<div id="js-scope-change-ideas-actions" class="hide js-bulk-action-form">
  <%= form_tag(update_area_scope_ideas_path, method: :post, remote: true, id: "js-form-scope-change-ideas", class: "form form-defaults flex items-center gap-x-2") do %>
    <div class="checkboxes hide">
      <% ideas.each do |idea| %>
        <%= check_box_tag "idea_ids[]", idea.id, false, class: "js-check-all-idea js-idea-id-#{idea.id}" %>
      <% end %>
    </div>

    <%= scopes_select_tag(:area_scope_id, options: { selected: current_component.settings.area_scope_parent_id }) %>

    <%= submit_tag(
          t("decidim.ideas.admin.ideas.index.update_scope_button"),
          id: "js-submit-scope-change-ideas",
          class: "button button__sm button__secondary small button--simple float-left"
        ) %>

    <button id="js-cancel-scope-change-ideas" class="button button__sm button__secondary clear compact js-cancel-bulk-action" type="button">
      <%= t("decidim.ideas.admin.ideas.index.cancel") %>
    </button>
  <% end %>
</div>
