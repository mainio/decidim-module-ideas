<div class="picker-header">
  <h1><%= t("ideas_picker.choose_ideas", scope: "decidim.ideas") %></h1>
  <input type="text" name="ideas-filter" id="ideas_filter" placeholder="<%= t("decidim.admin.filters.search_placeholder.id_string_or_title_cont", collection: ideas_collection_name) %>">
</div>
<div class="picker-content picker-list" data-picker-path="<%= picker_path %>" data-picker-more="<%= more_ideas? %>">
  <%= render :ideas %>
</div>
<div class="picker-footer">
  <div class="buttons button--double">
    <a class="button" data-close=""><%= t("ideas_picker.close", scope: "decidim.ideas") %></a>
  </div>
</div>

<%= javascript_pack_tag "decidim_ideas_idea_picker" %>
